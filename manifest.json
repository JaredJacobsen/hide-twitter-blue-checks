{
  "manifest_version": 3,
  "name": "Hide Blue Checks on Twitter",
  "version": "1.0",
  "description": "A Chrome extension to hide blue checks and/or tweets with blue checks on Twitter",
  "permissions": ["scripting", "storage"],
  "action": {
    "default_popup": "options.html"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*"],
      "js": ["contentScript.js"]
    }
  ]
}
